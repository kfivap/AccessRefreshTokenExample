{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "keyword-spacing": "error",
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "indent": [
            "error",
            4
        ],
        "no-mixed-spaces-and-tabs": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "space-infix-ops": "error",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq":[
            "warn",
            "always"
        ],
        "no-unused-vars": [
            "error", {
            "args": "all",
            "argsIgnorePattern": "^_"
            }
        ],
        "no-undef": 2,
        "space-before-blocks": "error",
        "comma-spacing": ["error", { "before": false, "after": true }]
    }
}
